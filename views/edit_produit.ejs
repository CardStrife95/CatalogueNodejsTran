<%- include layouts/header.ejs %>
<div class="page-data">
	<form method="post" action="/produit/edit/<%=data[0].idProduit%>">
		<table cellpadding="11">
			<tr>
				<td>Nom du produit :</td>
				<td><input type="text" name="nomProduit"
					value="<%=data[0].nomProduit%>" required></td>
			</tr>
			<tr>
				<td>Code du produit :</td>
				<td><input type="text" name="codeProduit"
					value="<%=data[0].codeProduit%>" required></td>
			</tr>
			<tr>
				<td>Description du produit :</td>
				<td><input type="text" name="descriptionProduit"
					value="<%=data[0].descriptionProduit%>" required></td>
			</tr>
			<tr>
				<td>Tarif du produit :</td>
				<td><input type="text" name="tarifProduit"
					value="<%=data[0].tarifProduit%>" required></td>
			</tr>
			<tr>
				<td>Poids du produit :</td>
				<td><input type="text" name="poidsProduit"
					value="<%=data[0].poidsProduit%>" required></td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;<input type="submit" name="submit" value="Save">
					<input type="button" name="cancel" value="Cancel" class="cancel"
					onClick="cancelClient()">
				</td>
			</tr>
		</table>
	</form>

</div>


<%- include layouts/footer.ejs %>